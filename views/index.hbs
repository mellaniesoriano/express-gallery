<div class='allPhotos'>
  {{#each allPhotos}}
  <div class="list-view">
    <a href="/gallery/{{id}}" class="linkButtons"><div class="each-photo" style="background: url({{link}}) no-repeat center; background-size: cover;"></div></a><img src="{{link}}">
    <p>Author: {{author}}</p>
    <p>Description: {{description}}</p>
    <p>ID: {{id}}</p>
  </div>
  {{/each}}
</div>

<div class="new-link">
  <a href="/gallery/new" class="linkButtons"><div class="addNew">Add New Image</div></a>
</div>